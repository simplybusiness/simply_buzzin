!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Simply Buzzin'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Simply Buzzin'}"}
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = javascript_include_tag "http://www.appelsiini.net/download/jquery.jeditable.mini.js"
    = csrf_meta_tags
  %body
    = render 'layouts/messages'
    = yield
